<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Facebook custom style-->
    <style name="small_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="language_config">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="input_field">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">@color/faded_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/faded_white</item>
        <item name="android:textColor">@color/faded_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="custom_button">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

<!--Instagram custom style-->
    <style name="LoginButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <!-- Style for the text views -->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Style for bold text views -->
    <style name="TextViewStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Style for the divider views -->
    <style name="DividerStyle">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>