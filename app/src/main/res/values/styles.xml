<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for the login button -->
    <style name="LoginButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Style for the text views -->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for bold text views -->
    <style name="TextViewStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the divider views -->
    <style name="DividerStyle">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Colors -->
    <color name="input_background">#AA539A</color>
    <color name="input_text_color">#CCA7D2</color>
    <color name="input_hint_color">#FAFAFA</color>
    <color name="button_text_color">#EDE7F6</color>



</resources>